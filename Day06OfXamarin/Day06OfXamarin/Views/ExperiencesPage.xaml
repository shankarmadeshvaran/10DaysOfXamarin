<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Experience Details" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Day06OfXamarin.Views.ExperiencesPage">
     <ContentPage.ToolbarItems>
        <ToolbarItem Text="New" Clicked="Handle_Add_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ListView x:Name="experienceListView">
             <ListView.ItemTemplate>
                 <DataTemplate>
                     <TextCell Text="{Binding Title}" Detail="{Binding UpdatedAt}"/>
                 </DataTemplate>
             </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>
